project Mailstop is

   package Ide is
      for Vcs_Kind use "Git";
   end Ide;

   for Object_Dir use "build";
   for Main use ("mailstop.adb");

   package Prove is
      for Switches use ("--timeout=10", "-j2");
   end Prove;

   package Compiler is
      for Default_Switches ("ada") use ("-fstack-check", "-gnata", "-g");
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

end Mailstop;

